# Ingestion Service Environment Variables
# Скопируйте этот файл в .env и заполните реальными значениями

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Название приложения
SPRING_APPLICATION_NAME=ingestion-service

# Порт приложения
SERVER_PORT=8083

# Профиль Spring Boot
SPRING_PROFILES_ACTIVE=prod

# Часовой пояс
APP_TIMEZONE=Europe/Moscow

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# URL подключения к базе данных
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/postgres

# Имя пользователя базы данных
SPRING_DATASOURCE_USERNAME=postgres

# Пароль базы данных
SPRING_DATASOURCE_PASSWORD=123password123

# Драйвер базы данных
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# Настройки JPA/Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# =============================================================================
# TINKOFF API CONFIGURATION
# =============================================================================

# Токен API Тинькофф Инвестиций
# Получите токен в личном кабинете Тинькофф Инвестиции
TINKOFF_API_TOKEN=your_tinkoff_token_here

# URL API Тинькофф
TINKOFF_API_URL=invest-public-api.tinkoff.ru

# Порт API Тинькофф
TINKOFF_API_PORT=443

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Уровень логирования для приложения
LOGGING_LEVEL_COM_EXAMPLE_INGESTIONSERVICE=INFO

# Уровень логирования для Spring Web
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=WARN

# Уровень логирования для Hibernate
LOGGING_LEVEL_ORG_HIBERNATE_SQL=WARN

# Файл логов
LOGGING_FILE_NAME=/var/log/ingestion-service/application.log

# Паттерн логов
LOGGING_PATTERN_FILE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n

# =============================================================================
# JVM CONFIGURATION
# =============================================================================

# Начальный размер heap памяти
JAVA_OPTS=-Xms512m -Xmx1g

# Дополнительные JVM параметры
JAVA_OPTS_EXTRA=-XX:+UseG1GC -XX:+UseStringDeduplication

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================

# Cron выражение для сбора цен закрытия (каждый день в 20:00 по МСК)
SCHEDULER_CLOSE_PRICES_CRON=0 0 20 * * *

# Часовой пояс для планировщика
SCHEDULER_TIMEZONE=Europe/Moscow

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Включение HTTPS (true/false)
SERVER_SSL_ENABLED=false

# Путь к keystore для HTTPS
SERVER_SSL_KEY_STORE=classpath:keystore.p12

# Пароль keystore
SERVER_SSL_KEY_STORE_PASSWORD=your_keystore_password

# Тип keystore
SERVER_SSL_KEY_STORE_TYPE=PKCS12

# Алиас ключа
SERVER_SSL_KEY_ALIAS=tomcat

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Включение Spring Boot Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus

# Показать детали health check
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# Включение метрик Prometheus
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Включение кэширования (true/false)
CACHE_ENABLED=false

# URL Redis сервера (если используется)
REDIS_URL=redis://localhost:6379

# Пароль Redis (если требуется)
REDIS_PASSWORD=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Режим разработки (true/false)
DEV_MODE=false

# Включение отладочных логов (true/false)
DEBUG_LOGGING=false

# Автоматическая перезагрузка (true/false)
SPRING_DEVTOOLS_RESTART_ENABLED=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Имя образа Docker
DOCKER_IMAGE_NAME=ingestion-service

# Тег образа Docker
DOCKER_IMAGE_TAG=latest

# Реестр Docker
DOCKER_REGISTRY=

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================

# Namespace Kubernetes
K8S_NAMESPACE=default

# Количество реплик
K8S_REPLICAS=2

# Лимиты ресурсов
K8S_RESOURCES_LIMITS_CPU=1000m
K8S_RESOURCES_LIMITS_MEMORY=1Gi
K8S_RESOURCES_REQUESTS_CPU=500m
K8S_RESOURCES_REQUESTS_MEMORY=512Mi

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Директория для резервных копий
BACKUP_DIR=/backup/postgres

# Периодичность резервного копирования (в днях)
BACKUP_RETENTION_DAYS=30

# Включение автоматического резервного копирования (true/false)
AUTO_BACKUP_ENABLED=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Включение уведомлений (true/false)
NOTIFICATIONS_ENABLED=false

# Email для уведомлений
NOTIFICATION_EMAIL=

# Slack webhook URL (если используется)
SLACK_WEBHOOK_URL=

# Telegram bot token (если используется)
TELEGRAM_BOT_TOKEN=

# Telegram chat ID (если используется)
TELEGRAM_CHAT_ID=